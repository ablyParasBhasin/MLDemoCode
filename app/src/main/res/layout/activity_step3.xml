                            android:layout_height="wrap_content"
                            android:text="@string/if_no_meetings_were_held_please_enter_0"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15dp"
                            android:background="@drawable/edt_bg"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:padding="@dimen/margin_5dp" />



                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt4_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/how_many_meetings_were_conducted_with_dlsa_in_this_week"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_5dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt4_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/if_no_meetings_were_held_please_enter_0"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15dp"
                            android:background="@drawable/edt_bg"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:padding="@dimen/margin_5dp" />




                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt5_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/how_many_meetings_were_conducted_with_registered_empaneled_csos_in_this_week"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_5dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt5_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/if_no_meetings_were_held_please_enter_0"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15dp"
                            android:background="@drawable/edt_bg"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:padding="@dimen/margin_5dp" />




                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt6_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/how_many_meetings_were_conducted_with_any_other_services_providers_in_this_week"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_5dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt6_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/if_no_meetings_were_held_please_enter_0"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15dp"
                            android:background="@drawable/edt_bg"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:padding="@dimen/margin_5dp" />



                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt7_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/can_you_please_elaborate_on_the_discussion_topics_for_the_meetings_with_these_district_level_officers_and_other_service_providers"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_5dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt7_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/write_below_in_the_textarea"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_7"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_60dp"
                            android:layout_marginEnd="@dimen/margin_15dp"
                            android:background="@drawable/edt_bg"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:padding="@dimen/margin_5dp" />





                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt8_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/please_share_pictures_from_the_activity_conducted"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_5dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt8_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/please_upload_photos_max_3"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txt_choose_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_file"
                            android:padding="@dimen/margin_5dp"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:background="@drawable/edt_bg"/>


<!--<ImageView
    android:id="@+id/img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/ic_launcher"/>-->

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            />


                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20dp">

                    <Button
                        android:id="@+id/btnSaveDraft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_enable_bg"
                        android:backgroundTint="@color/btn_draft_color"
                        android:gravity="center"
                        android:text="@string/save_as_draft"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_16sp" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_enable_bg"
                        android:gravity="center"
                        android:text="@string/save_continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_16sp" />

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>