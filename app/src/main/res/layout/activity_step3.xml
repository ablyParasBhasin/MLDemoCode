                            android:layout_marginTop="@dimen/margin_5dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt2_govn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/if_no_meetings_were_held_please_enter_0"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                         android:id="@+id/edt_govrnment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_15dp"
                            android:background="@drawable/edt_bg"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:padding="@dimen/margin_5dp" />





                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt3_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/how_many_meetings_were_conducted_with_one_stop_centers_in_this_week"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_5dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt3_"
