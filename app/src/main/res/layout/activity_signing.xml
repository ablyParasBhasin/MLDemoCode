<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backround_color">

    <RelativeLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="153dp"
            android:layout_height="238dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/margin_40dp"
            android:visibility="visible"
            app:srcCompat="@drawable/logo_app_dark_small" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_gravity="center"
            android:padding="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:text="Log in"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_5dp">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/edit_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:layout_marginEnd="@dimen/margin_15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_username"
                        style="@style/input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Username"
                        android:drawableStart="@drawable/ic_user_login"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/txt_20sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_lay"
                    style="@style/edit_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:layout_marginEnd="@dimen/margin_15dp"
                    android:layout_marginBottom="@dimen/margin_15dp"
                   >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_password"
                        style="@style/input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Password"
                        android:drawableStart="@drawable/ic_password_login"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif-black"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/txt_20sp" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:gravity="center|end"
                android:text="Forgot Password ?"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:textSize="@dimen/margin_12dp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@drawable/btn_disable_bg"
                android:gravity="center"
                android:text="Log in"
                android:textAllCaps="false"
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>