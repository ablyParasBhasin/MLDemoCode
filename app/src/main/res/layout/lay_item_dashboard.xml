<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/cardlay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    app:cardCornerRadius="@dimen/margin_15dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp">




        <!-- <ImageView
             android:id="@+id/img_grid"
             android:layout_width="120dp"
             android:layout_height="140dp"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="@dimen/margin_5dp"
             android:src="@drawable/delayed"
             android:scaleType="centerCrop"
             app:layout_constraintTop_toTopOf="parent" />-->

        <LinearLayout
            android:id="@+id/lay_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activty Id"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_activity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="46565"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_collector_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_activity_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_collecter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Collector"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_collecter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="46565"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_estate_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_collector_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_estate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estate Name"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_estate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="46565"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_estate_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_estate_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estate Location"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_estate_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="46565"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_estate_location"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_start_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Date"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_form_start_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="46565"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_start_date"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_end_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End Date"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_form_end_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="46565"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_end_date"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="46565"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>






